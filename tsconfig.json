{
    "compilerOptions": {
      "declaration":false,
      "emitDecoratorMetadata":true,
      "noEmit": false,
      "experimentalDecorators":true,
      "lib": [
        "es6",
        "dom"
      ],
      "module":"ESNext",
      "moduleResolution":"node",
      "sourceMap":true,
      "target":"es5",
      "jsx":"react",
      "allowSyntheticDefaultImports":true,
      "noImplicitAny":true,
      "noImplicitThis":true,
      "noImplicitReturns":true,
      "strictNullChecks":true
    },
    "include": [
        "frontend/**/*.ts",
        "frontend/**/*.tsx", "frontend/bundles/FMOscillator/components/components/keyboard.js",
      ],
    "exclude": [
      "**/*.spec.ts",
      "node_modules",
      "public", 
      "dist", 
      "lib"
    ],
    "compileOnSave":false
  }